{
  "name": "fight-company",
  "version": "1.0.0",
  "description": "Fight Company Website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/style.scss css/style.css -watch",
    "live": "live-server",
    "clean": "rimraf css",
    "compile": "node-sass --output-style=expanded sass/main.scss css/style.css",
    "prefix": "postcss css/style.css --use=autoprefixer --map=false --output=css/style.css",
    "minify": "cleancss -O1 --source-map --source-map-inline-sources --output css/main.css css/style.css",
    "start": "npm-run-all --parallel live watch:sass",
    "build": "npm-run-all clean compile prefix minify"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "author": "Stefan Mrvic",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "clean-css-cli": "^5.1.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1"
  }
}
