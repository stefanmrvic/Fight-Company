{
  "name": "fight-company",
  "version": "1.0.0",
  "description": "Fight Company Website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -watch",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css compress:css"
  },
  "author": "Stefan Mrvic",
  "license": "ISC",
  "dependencies": {
    "postcss-scss": "^3.0.4"
  },
  "devDependencies": {
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17"
  }
}
